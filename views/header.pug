header.header
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--jobs.nav--main
        a.nav__el(href='/') Jobs 
        a.nav__el(href='#reviews') Review
        a.nav__el(href='#apply') Apply to Job
        a.nav__el.resume_special(href='/resume') 
           button.pushable
            span.shadow
            span.edge
            span.front
                | Create Resume
    nav.nav.nav--user
        if user 
            a.nav__el.nav__el--logout Log Out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]

        else 
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up   

    